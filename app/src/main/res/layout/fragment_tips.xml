<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".dashboard.TipsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consigli sull'uso dell'Acqua Piovana"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/title_blue"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/currentTotalVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000001"
                android:layout_marginBottom="16dp"/>
            <!-- Linea divisiva -->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#BDBDBD"
                android:layout_marginBottom="16dp" />
            <!-- Testo descrittivo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="6dp"
                android:text="Ecco alcune idee su come puoi utilizzare al meglio l'acqua che hai raccolto!"
                android:textColor="@color/title_blue"
                android:layout_below="@id/addContainerButton"/>

            <LinearLayout
                android:id="@+id/tipsContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="0dp">
            <!-- Le card dei tips verranno aggiunte dinamicamente qui -->

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>