<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white">

        <!-- Logo dell'applicazione -->
        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logorain"
            android:contentDescription="Logo dell'App" />

        <!-- Campo Email -->
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_marginTop="20dp"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:backgroundTint="@color/light_gray"
            android:textColor="@color/black"
            android:layout_marginHorizontal="32dp" />

        <!-- Campo Password -->
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_marginTop="16dp"
            android:inputType="textPassword"
            android:padding="10dp"
            android:backgroundTint="@color/light_gray"
            android:textColor="@color/black"
            android:layout_marginHorizontal="32dp" />

        <!-- Bottone di Login -->
        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accedi"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="32dp"
            android:backgroundTint="#005596"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <!-- Link per la registrazione -->
        <TextView
            android:id="@+id/register_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Non hai un account? Registrati"
            android:textColor="#005596"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:clickable="true"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:importantForAccessibility="yes" />

        <!-- Link per la registrazione -->
        <TextView
            android:id="@+id/onboarding_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vuoi rivedere come funziona l'app? [Scopri di piÃ¹]"
            android:textColor="#005596"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:clickable="true"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:importantForAccessibility="yes" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>